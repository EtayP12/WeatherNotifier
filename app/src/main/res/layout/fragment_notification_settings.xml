<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.etayp.weathernotifier.NotificationSettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:gravity="center">

            <CheckBox
                android:id="@+id/temperature_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="temperature"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="left"
                app:buttonTint="@android:color/background_dark"
                android:gravity="center_vertical"/>

            <CheckBox
                android:id="@+id/uv_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="@string/wind_title"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="left"
                app:buttonTint="@android:color/background_dark" />

            <CheckBox
                android:id="@+id/rain_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Rain"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                app:buttonTint="@android:color/background_dark" />

            <CheckBox
                android:id="@+id/pollution_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Humidity"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="left"
                app:buttonTint="@android:color/background_dark" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>
