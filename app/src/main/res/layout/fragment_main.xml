                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/FCicon2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/cloudy_night_icon" />

                    <TextView
                        android:id="@+id/FCTemp2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="22.5Â°"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/FCline2"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:alpha="0.5"
                    app:srcCompat="@color/wallet_bright_foreground_holo_dark" />

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FCTime3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="24:00"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/FCicon3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/cloudy_night_icon" />

                    <TextView
                        android:id="@+id/FCTemp3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="26.5Â°"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/FCline3"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:alpha="0.5"
                    app:srcCompat="@color/wallet_bright_foreground_holo_dark" />

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FCTime4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="01:00"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/FCicon4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/cloudy_night_icon" />

                    <TextView
                        android:id="@+id/FCTemp4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="23.5Â°"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/FCline4"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:alpha="0.5"
                    app:srcCompat="@color/wallet_bright_foreground_holo_dark" />

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FCTime5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="02:00"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/FCicon5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        app:srcCompat="@drawable/clear_night_icon" />

                    <TextView
                        android:id="@+id/FCTemp5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="22.5Â°"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
